{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "WebApi"
    }
  },
  "JwtSettings": {
    "Secret": "",
    "ExpiryMinutes": 1,
    "Issuer": "ApiTemplate",
    "Audience": "ApiTemplate"
  },
  "ConnectionStrings": {
    "DbConnection": "database=postgres;server=localhost\\localhost\\postgres,8002;user id=postgres;password=postgres;",
    "Redis": "localhost:8003,abortConnect=false"
  }
}
